{
    "parser": "babel-eslint",
    "ecmaFeatures": {
        "modules": true
    },
    "rules": {
        "no-constant-condition": false,
        "no-shadow": false,
        "no-empty": false,
        "semi": [2, "never"],
		"quotes": [2, "single", "avoid-escape"],
        "curly": [2, "multi-line"]
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    }
}